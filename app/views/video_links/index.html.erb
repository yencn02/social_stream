<% toolbar :option => :media %>
<% content_for :title do%>
  <%= current_subject.name %>
<% end%>
<% content_for :sidebar do %>
  <%= render :partial => 'home/sidebar' %>
<% end %>

<%= location(
  link_to(image_tag("btn/btn_video.gif", :class => "menu_icon")+ "Video Links", video_links_path)
) %>

<br class="clearfloat" />
<div id="conversation">
  <h2>All Video Links</h2>
  <div>
    <% if @video_links.total_pages > 1 %>
      <div style="margin: 10px; padding: 10px; border-top: thin solid #D4E4EA;">
        <div style="float:right"><%= will_paginate @video_links %></div>
      </div>
    <% end %>
    <% @video_links.each_with_index do |video_link, i| %>
      <div style="margin: 10px; padding: 10px; border-top: thin solid #D4E4EA;">
        <div class="form_row">
          <label>Title:</label><b> <a href="<%= video_link.link %>"><%= video_link.title %></a></b>
        </div>
        <div class="form_row">
          <label>Description:</label> <%= video_link.description %>
        </div>
        <div class="form_row">
          <label>Updated at:</label> <%= video_link.updated_at %>
        </div>
        <div style="float:right;">
          <%= link_to 'Go to Link', video_link.link %> |
          <%= link_to 'Show', video_link %> |
          <%= link_to 'Edit', edit_video_link_path(video_link) %> |
          <%= link_to 'Destroy', video_link, :confirm => 'Are you sure?', :method => :delete %>
        </div>
      </div>
    <% end %>
    <% if @video_links.total_pages > 1 %>
      <div style="margin: 10px; padding: 10px; border-top: thin solid #D4E4EA;">
        <div style="float:right"><%= will_paginate @video_links %></div>
      </div>
    <% end %>
    <div style="margin: 10px; padding: 10px; border-top: thin solid #D4E4EA;">
      <%= link_to 'Add New Video Link', new_video_link_path, :style => "float: right;"%>
    </div>
  </div>

</div>