<% content_for :headers do %>
  <%= stylesheet_link_tag "progress" %>
  <%= javascript_include_tag "upload" %>
<% end %>
<%= form_for(@doc, :class => "new_message", :html => {:id => :submit_form, :multipart => true}) do |f| %>
  <% if @doc.errors.any? %>
  <div class="error">
    <h2><%= pluralize(@doc.errors.count, "error") %> prohibited this message from being sent:</h2>
      <ul>
        <% @doc.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
  </div>
  <% end %>
  <div class="block">
    <div class="form_row">
      <%= label_tag :title %>
    </div>
    <div class="form_row">
      <%= f.text_field :title, :class => "required form_tag" %>
    </div>
    <div class="form_row">
      <%= label_tag :description %>
    </div>
    <div class="form_row" id="ck_editor" >
      <%= f.text_area :description, {:rows =>6, :cols=> 53, :class => "required form_tag", :maxlength => 5000} %>
    </div>
    <div class="form_row">
      <%= label_tag "Choose a doc file" %>
    </div>
    <div class="form_row">
      <%= f.file_field :doc, :class => "required form_tag" %>
    </div>
    <div class="actions center">
      <%= render :partial => "/toolbar/upload_progress" %>
      <%= submit_tag "Upload", :id => "submit", :class => "button" %>
    </div>
  </div>

<% end %>